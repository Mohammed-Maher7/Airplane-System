@model AirplaneMVC.Models.Aircraft
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Edit Aircraft";
}

<h2>Edit Aircraft</h2>

<hr />

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Edit">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="AircraftID" />

    <div class="form-group">
        <label asp-for="Model" class="control-label"></label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Capacity" class="control-label"></label>
        <input asp-for="Capacity" class="form-control" />
        <span asp-validation-for="Capacity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AirlineID" class="control-label">Airline</label>
        <select asp-for="AirlineID" class="form-control" asp-items="ViewBag.AirlineID">
            <option value="">-- Select Airline --</option>
        </select>
        <span asp-validation-for="AirlineID" class="text-danger"></span>
    </div>

    <input type="submit" value="Save" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}