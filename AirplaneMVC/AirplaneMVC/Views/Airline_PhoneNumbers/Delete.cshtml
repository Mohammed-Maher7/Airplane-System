@model AirplaneMVC.Models.Airline_PhoneNumbers

@{
    ViewData["Title"] = "Delete Phone Number";
}

<h2>Delete Phone Number</h2>
<hr />

<h4>Are you sure you want to delete this phone number?</h4>

<dl class="row">
    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Phone)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.Phone)</dd>

    <dt class="col-sm-2">Airline</dt>
    <dd class="col-sm-10">@Model.Airline?.Name</dd>
</dl>

<form asp-action="Delete">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="PhoneNumberID" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>