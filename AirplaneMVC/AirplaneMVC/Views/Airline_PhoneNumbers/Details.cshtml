@model AirplaneMVC.Models.Airline_PhoneNumbers

@{
    ViewData["Title"] = "Phone Number Details";
}

<h2>Phone Number Details</h2>
<hr />

<dl class="row">
    <dt class="col-sm-2">Phone Number</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.Phone)</dd>

    <dt class="col-sm-2">Airline</dt>
    <dd class="col-sm-10">@Model.Airline?.Name</dd>
</dl>

<div>
    <a asp-action="Edit" asp-route-id="@Model.PhoneNumberID" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>