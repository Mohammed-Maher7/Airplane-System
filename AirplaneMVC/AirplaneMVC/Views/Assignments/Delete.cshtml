@model AirplaneMVC.Models.Assignment

@{
    ViewData["Title"] = "Delete Assignment";
}

<h2>Delete Assignment</h2>
<hr />

<h4>Are you sure you want to delete this assignment?</h4>

<dl class="row">
    <dt class="col-sm-2">Aircraft</dt>
    <dd class="col-sm-10">@Model.Aircraft?.Model</dd>

    <dt class="col-sm-2">Route</dt>
    <dd class="col-sm-10">
        @if (Model.Route != null)
        {
            @($"{Model.Route.Origin} - {Model.Route.Destination}")
        }
    </dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.DepartureDateTime)</dt>
    <dd class="col-sm-10">@Model.DepartureDateTime?.ToString("g")</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ArrivalDateTime)</dt>
    <dd class="col-sm-10">@Model.ArrivalDateTime?.ToString("g")</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Passengers)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.Passengers)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.PricePerPassenger)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.PricePerPassenger)</dd>

    <!-- Include other fields as necessary -->
</dl>

<form asp-action="Delete">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="AssignmentID" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>