@model AirplaneMVC.Models.Assignment
@using AirplaneMVC.Models
@using RouteModel = AirplaneMVC.Models.Route

@{
    ViewData["Title"] = "Assignment Details";
}

<h2>Assignment Details</h2>

<dl class="row">
    <dt class="col-sm-2">Aircraft</dt>
    <dd class="col-sm-10">@Model.Aircraft?.Model</dd>

    <dt class="col-sm-2">Route</dt>
    <dd class="col-sm-10">@((Model.Route != null) ? Model.Route.Origin + " - " + Model.Route.Destination : "")</dd>

    <dt class="col-sm-2">Departure Time</dt>
    <dd class="col-sm-10">@Model.DepartureDateTime?.ToString("g")</dd>

    <dt class="col-sm-2">Arrival Time</dt>
    <dd class="col-sm-10">@Model.ArrivalDateTime?.ToString("g")</dd>

    <dt class="col-sm-2">Passengers</dt>
    <dd class="col-sm-10">@Model.Passengers</dd>

    <dt class="col-sm-2">Price per Passenger</dt>
    <dd class="col-sm-10">@Model.PricePerPassenger</dd>

    <dt class="col-sm-2">Travel Time</dt>
    <dd class="col-sm-10">@Model.TravelTime</dd>
</dl>

<div>
    <a asp-action="Edit" asp-route-id="@Model.AssignmentID" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>