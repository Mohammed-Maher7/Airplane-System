@model IEnumerable<AirplaneMVC.Models.Assignment>
@using AirplaneMVC.Models
@using RouteModel = AirplaneMVC.Models.Route

@{
    ViewData["Title"] = "Assignments";
}

<h2>Assignments</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Assignment</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Aircraft</th>
            <th>Route</th>
            <th>Departure Time</th>
            <th>Arrival Time</th>
            <th>Passengers</th>
            <th>Price per Passenger</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var assignment in Model)
        {
            <tr>
                <td>@assignment.Aircraft?.Model</td>
                <td>@((assignment.Route != null) ? assignment.Route.Origin + " - " + assignment.Route.Destination : "")</td>
                <td>@assignment.DepartureDateTime?.ToString("g")</td>
                <td>@assignment.ArrivalDateTime?.ToString("g")</td>
                <td>@assignment.Passengers</td>
                <td>@assignment.PricePerPassenger</td>
                <td>
                    <a asp-action="Details" asp-route-id="@assignment.AssignmentID" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@assignment.AssignmentID" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@assignment.AssignmentID" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>