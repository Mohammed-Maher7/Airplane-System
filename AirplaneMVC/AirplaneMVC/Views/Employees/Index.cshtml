@model IEnumerable<AirplaneMVC.Models.Employee>

@{
    ViewData["Title"] = "Employees";
}

<h2>Employees</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Employee</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Name)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Position)</th>
            <th>Airline</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => employee.Name)</td>
                <td>@Html.DisplayFor(modelItem => employee.Position)</td>
                <td>@employee.Airline?.Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@employee.EmployeeID" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@employee.EmployeeID" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@employee.EmployeeID" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>