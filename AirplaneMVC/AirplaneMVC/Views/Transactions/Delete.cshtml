@model AirplaneMVC.Models.Transactions

@{
    ViewData["Title"] = "Delete Transaction";
}

<h2>Delete Transaction</h2>
<hr />

<h4>Are you sure you want to delete this transaction?</h4>

<dl class="row">
    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Date)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.Date)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Description)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Amount)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.Amount)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Type)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.Type)</dd>

    <dt class="col-sm-2">Airline</dt>
    <dd class="col-sm-10">@Model.Airline?.Name</dd>
</dl>

<form asp-action="Delete">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="TransactionID" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>