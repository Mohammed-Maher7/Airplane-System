@model IEnumerable<AirplaneMVC.Models.Transactions>

@{
    ViewData["Title"] = "Transactions";
}

<h2>Transactions</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New Transaction</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Date)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Description)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Amount)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Type)</th>
            <th>Airline</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var transaction in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => transaction.Date)</td>
                <td>@Html.DisplayFor(modelItem => transaction.Description)</td>
                <td>@Html.DisplayFor(modelItem => transaction.Amount)</td>
                <td>@Html.DisplayFor(modelItem => transaction.Type)</td>
                <td>@transaction.Airline?.Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@transaction.TransactionID" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@transaction.TransactionID" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@transaction.TransactionID" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>